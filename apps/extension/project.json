{
  "name": "extension",
  "root": "apps/extension",
  "sourceRoot": "apps/extension",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "targets": {
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/extension",
        "command": "pnpm dev"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/extension",
        "command": "pnpm build",
        "outputs": ["dist/apps/extension"]
      }
    },
    "lint:fix": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/app",
        "command": "npx eslint . --ext .tsx,.ts --fix && npx prettier --write src/**/*.{ts,tsx}"
      }
    }
  }
}
